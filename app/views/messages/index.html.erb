<ul>
  <% @messages.each do |message| %>
    <li><%= link_to message.name, new_message_view_path %></li>
  <% end %>
</ul>

<%= form_for :message, url: "/messages" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
